{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "uniqueString": {
            "type": "string"
        },
        "resourceUri": {
            "type": "string"
        },
        "notificationEmail": {
            "type": "string"
        }
    },
    "variables": {
        "uniqueString": "[parameters('uniqueString')]",
        "storageAccountName": "[concat(variables('uniqueString'),'storage')]",
        "logicAppName": "[concat(variables('uniqueString'),'-Logic-App')]",
        "functionAppName": "[concat(variables('uniqueString'),'-Function-App')]",
        "O365ConnectionName": "[concat(variables('uniqueString'),'-O365-Connection')]",
        "RssConnectionName": "[concat(variables('uniqueString'),'-RSS-Connection')]",
        "appInsightsName": "[concat(variables('uniqueString'),'-App-Insights')]",
        "hostingPlanName": "[concat(variables('uniqueString'),'-Hosting-Plan')]",
        "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
        "functionName": "Format",
        "emailSplit": "[split(parameters('notificationEmail'),'@')]",
        "emailName": "[first(variables('emailSplit'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2015-08-01",
            "name": "[variables('hostingPlanName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y"
            },
            "properties": {
                "name": "[variables('hostingPlanName')]",
                "computeMode": "Dynamic"
            }
        },
        {
            "apiVersion": "2015-05-01",
            "name": "[variables('appInsightsName')]",
            "type": "Microsoft.Insights/components",
            "kind": "web",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', variables('functionAppName'))]": "Resource"
            },
            "properties": {
                "Application_Type": "web",
                "ApplicationId": "[variables('functionAppName')]"
            }
        },
        {
            "apiVersion": "2018-02-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('functionAppName')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
            },
            "resources": [
                {
                   "apiVersion": "2016-08-01",
                   "name": "appsettings",
                   "type": "config",
                   "dependsOn": [
                     "[resourceId('Microsoft.Web/Sites', variables('functionAppName'))]"
                   ],
                   "properties": {
                     "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]",
                     "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]",
                     "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]",
                     "WEBSITE_CONTENTSHARE": "[toLower(variables('functionAppName'))]",
                     "WEBSITE_NODE_DEFAULT_VERSION": "10.14.1",
                     "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('microsoft.insights/components/', variables('appInsightsName')), '2015-05-01').InstrumentationKey]",
                     "FUNCTIONS_EXTENSION_VERSION": "~2",
                     "FUNCTIONS_WORKER_RUNTIME": "node",
                     "WEBSITE_RUN_FROM_PACKAGE": "[concat(parameters('resourceUri'),'files/json-to-english.zip')]"
                   }
                }
             ]
        },
        {
            "name": "[concat(variables('functionAppName'),'/',variables('functionName'))]",
            "type": "Microsoft.Web/sites/functions",
            "apiVersion": "2018-02-01",
            "properties": {
                "mode": "Incremental",
                "function_app_id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Web/sites/',variables('functionAppName'))]",
                "script_root_path_href": "[concat('https://',variables('functionAppName'),'.scm.azurewebsites.net/api/vfs/site/wwwroot/',variables('functionName'),'/')]",
                "script_href": "[concat('https://',variables('functionAppName'),'.scm.azurewebsites.net/api/vfs/site/wwwroot/',variables('functionName'),'/index.js')]",
                "href": "[concat('https://',variables('functionAppName'),'.scm.azurewebsites.net/api/functions/',variables('functionName'))]",
                "config": {
                    "bindings": [
                        {
                            "name": "req",
                            "type": "httpTrigger",
                            "authLevel": "function",
                            "direction": "in",
                            "methods": [
                                "get"
                            ]
                        },
                        {
                        "type": "http",
                        "direction": "out",
                        "name": "res"
                        }
                    ],
                    "disabled": false
                },
                "files": null,
                "test_data": "[concat('{\"method\":\"get\",\"body\":\"\",\"queryStringParams\":[{\"name\":\"name\",\"value\":\"',variables('emailName'),'\"},{\"name\":\"instance\",\"value\":\"worldwide\"},{\"name\":\"clientrequestid\",\"value\":\"bad1f103-bad1-f103-0123-456789abcdef\"},{\"name\":\"since\",\"value\":\"0000000000\"}],\"headers\":[]}')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
            ]
        }
    ],
    "outputs": {
        "Key": {
            "type": "string",
            "value": "[listsecrets(resourceId('Microsoft.Web/sites/functions', variables('functionAppName'), variables('functionName')),'2018-02-01').key]"
        },        
        "Url": {
            "type": "string",
            "value": "[listsecrets(resourceId('Microsoft.Web/sites/functions', variables('functionAppName'), variables('functionName')),'2018-02-01').trigger_url]"
        }        
    }
}